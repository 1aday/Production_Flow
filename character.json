{
    "$schema": "https://example.com/schemas/character.v4.schema.json",
    "character": "<CHARACTER_ID>",
    "show_id": "<SHOW_ID_REFERENCE>",
    "style_snapshot": {
      "medium": "<production_style.medium from show>",
      "stylization_level": "<production_style.stylization_level from show>",
      "key_references": ["<2-3 cinematic references from show>"]
    },
  
    "metadata": {
      "name": "<Character's display name>",
      "role": "<e.g., Protagonist | Supporting | Antagonist>",
      "function": "<story function in one line>",
      "tags": ["human", "dialogue"]
    },
  
    "biometrics": {
      "species": {
        "type": "human",
        "subtype": "animated",
        "scale_ratio": 1.0,
        "visual_markers": "baseline human presentation",
        "materiality": "stylized animated character",
        "physiology": "standard human anatomy"
      },
      "gender_identity": "<male | female | non_binary | other>",
      "age_years": { "value": 38, "approximate": false },
      "ethnicity": "—",
      "skin_color": { "hex": "#CDAA8D", "description": "warm light-tan" },
      "eye_color": { "hex": "#4A3B2A", "description": "brown", "patterning": "" },
  
      "has_hair": true,
      "hair": {
        "style": "short side-part",
        "color_hex": "#3B2F2F",
        "color_description": "dark brown",
        "length": "short",
        "texture": "wavy"
      },
  
      "facial_hair": { "has_facial_hair": false, "style": "", "density": "light" },
  
      "height": { "value": 180, "unit": "cm", "notes": "" },
      "weight": { "value": 78, "unit": "kg", "notes": "" },
      "build": { "body_type": "lean", "notes": "" },
  
      "distinctive_features": "<One sentence describing scars, tattoos, prosthetics, unusual traits>",
  
      "voice": {
        "descriptors": ["warm","measured","wry"],
        "pitch_range": "mid",
        "tempo": "moderate",
        "timbre_notes": "slight rasp on emphasis"
      },
  
      "accent": {
        "style": "General North American",
        "strength": "light",
        "code_switching": "neutralizes in formal settings"
      }
    },
  
    "look": {
      "silhouette": "upright, relaxed shoulders",
      "palette": { "anchors": ["#1E2A36","#5E6B73","#C9C3B8"], "notes": "deep neutrals + warm accents" },
      "surface": {
        "materials": "stylized skin treatment",
        "finish": "matte",
        "texture_rules": "match show's art style"
      },
      "eyes": { "type": "expressive animated", "catchlight_shape": "round", "behaviors": ["clean key catchlight"] },
      "wardrobe": {
        "silhouette_rules": "smart-casual mentor",
        "items": ["charcoal jacket","ecru open-collar shirt"],
        "accessories": ["simple watch"],
        "avoid": ["loud branding"],
        "summary": "<One sentence summary for quick reference>"
      },
      "signature_colors": ["#1E2A36", "#C9C3B8"]
    },
  
    "portrait_guidance": {
      "focal_point": "<face | bust | full_body>",
      "emotional_default": "<neutral | smiling | serious | playful | determined>",
      "pose_preference": "<slight lean-in | confident stance | relaxed seated>",
      "background_hint": "<studio neutral | environmental | abstract>"
    },
  
    "performance": {
      "pose_defaults": "slight lean-in; attentive",
      "expression_set": ["half-smile","thoughtful listen","decisive nod"],
      "gestural_loops": ["index card square-up"],
      "animation_cadence": { "animate_fps": 24, "hold_style": "stylized" }
    },
  
    "scene_presence": {
      "camera_override": { "lenses": ["50mm","85mm"], "framing": "chest-up", "movement": "slow push", "dof": "shallow" },
      "lighting_override": { "key": "soft diffused", "fill": "15–20% bounce", "edge": "subtle rim" },
      "composition_override": { "symmetry_bias": "balanced thirds", "leading_lines": "to eyes", "foreground": "subtle depth" }
    },
  
    "behavior_and_rules": {
      "do": ["match show style","purposeful props"],
      "do_not": ["break established aesthetic","over-detail"]
    },
  
    "showcase_scene_prompt": "10-second solo scene prompt capturing this character's hallmark voice, action, and attitude."
  }
  
