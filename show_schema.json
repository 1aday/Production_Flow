{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/schemas/visual_aesthetics.schema.json",
    "title": "Visual Aesthetics (Show-Agnostic)",
    "type": "object",
    "additionalProperties": false,
    "required": ["production_style", "visual_aesthetics", "show_title", "show_logline", "poster_description"],
    "properties": {
      "show_title": {
        "type": "string",
        "minLength": 2,
        "maxLength": 80,
        "description": "The show's title. Should be catchy, memorable, and evocative of the show's tone and premise."
      },
      "show_logline": {
        "type": "string",
        "minLength": 20,
        "description": "One or two sentence pitch describing premise, leads, conflict, and visual tone."
      },
      "poster_description": {
        "type": "string",
        "minLength": 120,
        "description": "Detailed description of an iconic poster for this show, summarising composition, characters and their appearance, palette, lighting, and scene elements."
      },
      "production_style": {
        "type": "object",
        "additionalProperties": false,
        "required": ["medium", "cinematic_references", "visual_treatment", "stylization_level"],
        "description": "CRITICAL: Must choose a concrete non-photorealistic visual style. Avoid anything that looks like real photography or live-action footage.",
        "properties": {
          "medium": {
            "type": "string",
            "enum": [
              "Pixar-style 3D animation",
              "Studio Ghibli hand-drawn animation",
              "Claymation (Wallace & Gromit style)",
              "Stop-motion puppet animation",
              "2D cel animation",
              "Rotoscoped animation",
              "Paper cutout animation",
              "Mixed media animation",
              "Spider-Verse stylized 3D",
              "Laika stop-motion",
              "Aardman claymation",
              "Cartoon Network 2D style",
              "Disney 3D animation",
              "Dreamworks animation style",
              "Anime aesthetic",
              "Graphic novel illustration style",
              "Comic book visual style",
              "Art deco animation",
              "Retro cartoon aesthetic",
              "Painterly 3D animation"
            ],
            "description": "MUST choose from this list. These are proven non-photorealistic styles that work well with image/video generators. DO NOT create custom descriptions or use any 'live-action' terminology."
          },
          "cinematic_references": {
            "type": "array",
            "minItems": 2,
            "maxItems": 4,
            "items": { "type": "string" },
            "description": "2-4 specific animation films, cartoon series, or highly stylized films that define the visual style. Examples: 'The Incredibles character design', 'Spirited Away backgrounds', 'Wallace & Gromit texture work', 'Into the Spider-Verse animation style', 'Arcane painted rendering', 'Kubo and the Two Strings stop-motion', 'Adventure Time color palette', 'Avatar: The Last Airbender art style', 'Fantastic Mr Fox craftsmanship', 'Klaus lighting techniques'."
          },
          "visual_treatment": {
            "type": "string",
            "minLength": 50,
            "description": "Detailed description emphasizing the ANIMATED or ILLUSTRATED nature of the visuals. Must use terms like: 'hand-crafted', 'animated', 'illustrated', 'painterly', 'stylized rendering', 'cartoon aesthetic', 'animated textures', 'non-photographic'. Examples: 'Vibrant 3D animation with exaggerated character proportions and painterly lighting', 'Hand-drawn aesthetic with visible brush strokes and watercolor backgrounds', 'Claymation with tactile textures and imperfect surfaces', 'Stylized 3D with bold outlines and graphic shadows'."
          },
          "stylization_level": {
            "type": "string",
            "enum": ["highly_stylized", "moderately_stylized"],
            "description": "Level of artistic stylization. Only 'highly_stylized' or 'moderately_stylized' allowed - no realistic options."
          },
          "art_style": {
            "type": "object",
            "additionalProperties": false,
            "description": "Comprehensive art style definition capturing all aesthetic dimensions for accurate style replication (e.g., Family Guy, South Park, Wallace & Gromit, Wes Anderson).",
            "properties": {
              "line_art": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "outline_style": {
                    "type": "string",
                    "enum": ["bold", "thin", "variable", "none", "brush_stroke"],
                    "description": "Style of character/object outlines"
                  },
                  "outline_color": {
                    "type": "string",
                    "enum": ["black", "colored", "variable", "none"],
                    "description": "Color of outlines"
                  },
                  "outline_weight": {
                    "type": "string",
                    "enum": ["uniform", "variable", "tapered"],
                    "description": "Consistency of outline thickness"
                  },
                  "line_quality": {
                    "type": "string",
                    "enum": ["clean", "sketchy", "hand_drawn", "vector_clean"],
                    "description": "Quality and feel of line work"
                  }
                }
              },
              "shape_language": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "primary_shapes": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "enum": ["geometric", "organic", "angular", "rounded", "hybrid"]
                    },
                    "description": "Dominant shape types used in design"
                  },
                  "shape_simplification": {
                    "type": "string",
                    "enum": ["high", "medium", "low"],
                    "description": "Level of geometric simplification"
                  },
                  "edge_softness": {
                    "type": "string",
                    "enum": ["hard", "soft", "mixed"],
                    "description": "Hardness of shape edges"
                  },
                  "form_representation": {
                    "type": "string",
                    "enum": ["flat", "dimensional", "isometric"],
                    "description": "How 3D forms are represented"
                  }
                }
              },
              "color_application": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "color_style": {
                    "type": "string",
                    "enum": ["flat", "gradient", "cel_shaded", "painterly", "textured", "mixed"],
                    "description": "Primary method of color application"
                  },
                  "shading_method": {
                    "type": "string",
                    "enum": ["none", "flat_shadows", "gradient_shading", "cel_shading", "soft_shading"],
                    "description": "How shadows and depth are indicated"
                  },
                  "color_count": {
                    "type": "string",
                    "enum": ["limited", "moderate", "extensive"],
                    "description": "Number of colors in palette"
                  },
                  "color_saturation": {
                    "type": "string",
                    "enum": ["desaturated", "moderate", "highly_saturated", "vibrant"],
                    "description": "Intensity of colors"
                  },
                  "color_harmony": {
                    "type": "string",
                    "enum": ["monochromatic", "complementary", "analogous", "triadic", "eclectic"],
                    "description": "Color relationship scheme"
                  }
                }
              },
              "rendering_approach": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "dimensionality": {
                    "type": "string",
                    "enum": ["2d_flat", "2d_shaded", "2.5d", "3d_cel_shaded", "3d_realistic", "stop_motion", "mixed_media"],
                    "description": "Dimensional rendering approach"
                  },
                  "surface_quality": {
                    "type": "string",
                    "enum": ["smooth", "textured", "hand_crafted", "digital_clean", "tactile"],
                    "description": "Surface finish and texture feel"
                  },
                  "detail_level": {
                    "type": "string",
                    "enum": ["minimal", "simplified", "moderate", "detailed", "highly_detailed"],
                    "description": "Amount of visual detail"
                  },
                  "texture_style": {
                    "type": "string",
                    "enum": ["none", "subtle", "visible", "prominent", "hand_drawn"],
                    "description": "Presence and style of textures"
                  }
                }
              },
              "character_design": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "proportions": {
                    "type": "string",
                    "enum": ["realistic", "slightly_exaggerated", "moderately_exaggerated", "highly_exaggerated", "abstract"],
                    "description": "Character proportion stylization"
                  },
                  "head_to_body_ratio": {
                    "type": "string",
                    "enum": ["1:6", "1:5", "1:4", "1:3", "1:2", "other"],
                    "description": "Head size relative to body"
                  },
                  "feature_simplification": {
                    "type": "string",
                    "enum": ["detailed", "moderate", "simplified", "minimal", "iconic"],
                    "description": "Level of facial feature detail"
                  },
                  "facial_features": {
                    "type": "string",
                    "enum": ["realistic", "stylized", "geometric", "minimal", "exaggerated"],
                    "description": "Facial feature style"
                  },
                  "body_stylization": {
                    "type": "string",
                    "enum": ["realistic", "stylized", "geometric", "abstract"],
                    "description": "Body form stylization"
                  }
                }
              },
              "background_style": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "detail_level": {
                    "type": "string",
                    "enum": ["minimal", "simplified", "moderate", "detailed", "highly_detailed"],
                    "description": "Background detail amount"
                  },
                  "rendering_consistency": {
                    "type": "string",
                    "enum": ["matches_characters", "more_detailed", "less_detailed", "stylistically_different"],
                    "description": "How backgrounds relate to character style"
                  },
                  "perspective_style": {
                    "type": "string",
                    "enum": ["flat", "one_point", "two_point", "isometric", "atmospheric"],
                    "description": "Perspective approach"
                  },
                  "simplification_approach": {
                    "type": "string",
                    "enum": ["geometric", "organic", "textured", "pattern_based"],
                    "description": "Method of background simplification"
                  }
                }
              },
              "animation_motion": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "motion_style": {
                    "type": "string",
                    "enum": ["smooth", "choppy", "limited", "full", "stylized", "stop_motion"],
                    "description": "Animation motion quality"
                  },
                  "frame_rate_feel": {
                    "type": "string",
                    "enum": ["12fps_feel", "24fps_feel", "smooth_60fps", "variable"],
                    "description": "Perceived frame rate"
                  },
                  "easing_style": {
                    "type": "string",
                    "enum": ["linear", "ease_in_out", "bouncy", "snappy", "organic"],
                    "description": "Animation easing approach"
                  },
                  "exaggeration_level": {
                    "type": "string",
                    "enum": ["subtle", "moderate", "high", "extreme"],
                    "description": "Level of motion exaggeration"
                  }
                }
              },
              "art_movement_references": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "primary_influences": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "enum": ["pop_art", "minimalism", "art_deco", "art_nouveau", "brutalism", "retro", "vintage", "modernist", "postmodern", "surrealism", "expressionism"]
                    },
                    "description": "Art movements that influence the style"
                  },
                  "era_aesthetic": {
                    "type": "string",
                    "enum": ["1920s", "1950s", "1960s", "1970s", "1980s", "1990s", "2000s", "contemporary", "timeless"],
                    "description": "Decade aesthetic reference"
                  },
                  "cultural_influences": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "enum": ["japanese_anime", "european_comics", "american_cartoon", "indie_animation", "other"]
                    },
                    "description": "Cultural animation traditions"
                  }
                }
              },
              "visual_techniques": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "texture_overlay": {
                    "type": "string",
                    "enum": ["none", "subtle", "moderate", "prominent"],
                    "description": "Texture overlay presence"
                  },
                  "grain_or_noise": {
                    "type": "string",
                    "enum": ["none", "film_grain", "digital_noise", "paper_texture", "canvas_texture"],
                    "description": "Grain or texture noise type"
                  },
                  "halftone_patterns": {
                    "type": "string",
                    "enum": ["none", "subtle", "moderate", "prominent"],
                    "description": "Halftone pattern usage"
                  },
                  "color_bleeding": {
                    "type": "string",
                    "enum": ["none", "subtle", "moderate", "prominent"],
                    "description": "Color bleeding effect"
                  },
                  "hand_drawn_imperfections": {
                    "type": "string",
                    "enum": ["none", "subtle", "moderate", "prominent"],
                    "description": "Visible hand-drawn quality"
                  }
                }
              },
              "composition_style": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "layout_approach": {
                    "type": "string",
                    "enum": ["symmetrical", "rule_of_thirds", "centered", "asymmetrical", "dynamic"],
                    "description": "Composition layout style"
                  },
                  "framing_style": {
                    "type": "string",
                    "enum": ["tight", "medium", "wide", "variable"],
                    "description": "Shot framing approach"
                  },
                  "depth_representation": {
                    "type": "string",
                    "enum": ["flat", "shallow", "moderate", "deep"],
                    "description": "Depth of field representation"
                  },
                  "negative_space": {
                    "type": "string",
                    "enum": ["minimal", "moderate", "generous", "prominent"],
                    "description": "Use of negative/empty space"
                  }
                }
              }
            }
          }
        }
      },
      "visual_aesthetics": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "goal",
          "pipeline",
          "color",
          "lighting",
          "camera",
          "composition",
          "materials_and_textures",
          "species_design",
          "sets_and_prop_visuals",
          "post_grade",
          "export_specs",
          "prohibitions_global"
        ],
        "properties": {
          "goal": { "type": "string", "minLength": 3 },
  
          "pipeline": {
            "type": "object",
            "additionalProperties": false,
            "required": ["color_management", "frame_rates", "shutter_angle", "aspect_ratio", "highlight_rolloff", "black_floor", "grain_global"],
            "properties": {
              "color_management": { "type": "string" },
              "frame_rates": {
                "type": "object",
                "additionalProperties": false,
                "required": ["animation_capture", "playback", "live_action_capture"],
                "properties": {
                  "animation_capture": { "type": "number", "minimum": 1 },
                  "playback": { "type": "number", "minimum": 1 },
                  "live_action_capture": { "type": "number", "minimum": 1 }
                }
              },
              "shutter_angle": {
                "type": "object",
                "additionalProperties": false,
                "required": ["animation", "live_action"],
                "properties": {
                  "animation": { "type": "number", "minimum": 1, "maximum": 360 },
                  "live_action": { "type": "number", "minimum": 1, "maximum": 360 }
                }
              },
              "aspect_ratio": { "type": "string", "pattern": "^[0-9]+(\\.[0-9]+)?:1$|^[0-9]+:[0-9]+$" },
              "highlight_rolloff": { "type": "string" },
              "black_floor": { "type": "string" },
              "grain_global": { "type": "string" },
              "render_order": { "type": "array", "items": { "type": "string" } }
            }
          },
  
          "color": {
            "type": "object",
            "additionalProperties": false,
            "required": ["palette_bias", "anchor_hex", "skin_protection"],
            "properties": {
              "palette_bias": { "type": "string" },
              "anchor_hex": {
                "type": "array",
                "minItems": 3,
                "items": { "type": "string", "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$" },
                "uniqueItems": true
              },
              "skin_protection": { "type": "string" },
              "white_balance_baseline_K": { "type": "number", "minimum": 1000, "maximum": 20000 },
              "prohibitions": { "type": "array", "items": { "type": "string" } }
            }
          },
  
          "lighting": {
            "type": "object",
            "additionalProperties": false,
            "required": ["temperature_model", "key", "fill", "edge", "practicals_in_frame", "halation_policy"],
            "properties": {
              "temperature_model": { "type": "string" },
              "key": { "type": "string" },
              "fill": { "type": "string" },
              "edge": { "type": "string" },
              "practicals_in_frame": { "type": "boolean" },
              "halation_policy": { "type": "string" },
              "no_go": { "type": "array", "items": { "type": "string" } }
            }
          },
  
          "camera": {
            "type": "object",
            "additionalProperties": false,
            "required": ["sensor", "lens_family", "movement", "dof_guides", "coverage_rules"],
            "properties": {
              "sensor": { "type": "string" },
              "lens_family": { "type": "array", "minItems": 1, "items": { "type": "string" }, "uniqueItems": true },
              "movement": { "type": "array", "items": { "type": "string" } },
              "dof_guides": { "type": "string" },
              "coverage_rules": { "type": "array", "items": { "type": "string" } }
            }
          },
  
          "composition": {
            "type": "object",
            "additionalProperties": false,
            "required": ["symmetry_bias", "leading_lines", "foreground_depth", "color_blocking"],
            "properties": {
              "symmetry_bias": { "type": "string" },
              "leading_lines": { "type": "string" },
              "foreground_depth": { "type": "string" },
              "color_blocking": { "type": "string" }
            }
          },
  
          "materials_and_textures": {
            "type": "object",
            "additionalProperties": false,
            "required": ["human_textures", "set_surfaces", "patina"],
            "properties": {
              "human_textures": { "type": "string" },
              "set_surfaces": { "type": "array", "items": { "type": "string" } },
              "patina": { "type": "string" },
              "notes": { "type": "string" }
            }
          },
  
          "species_design": {
            "type": "object",
            "additionalProperties": false,
            "description": "Define look rules for different performer/species types that may co-exist (e.g., humans, puppets, CG).",
            "required": ["types"],
            "properties": {
              "types": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "object",
                  "additionalProperties": false,
                  "required": ["name", "silhouette", "surface_finish", "eyes", "face_modularity"],
                  "properties": {
                    "name": { "type": "string" },
                    "silhouette": { "type": "string" },
                    "surface_finish": { "type": "string" },
                    "materials": { "type": "string" },
                    "eyes": {
                      "type": "object",
                      "additionalProperties": false,
                      "required": ["catchlight_shape"],
                      "properties": {
                        "type": { "type": "string" },
                        "catchlight_shape": { "type": "string" },
                        "behaviors": { "type": "array", "items": { "type": "string" } }
                      }
                    },
                    "face_modularity": { "type": "string" },
                    "stress_cues": { "type": "string" },
                    "palette": {
                      "type": "object",
                      "additionalProperties": false,
                      "properties": {
                        "anchors": { "type": "array", "items": { "type": "string", "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$" } },
                        "notes": { "type": "string" }
                      }
                    }
                  }
                }
              }
            }
          },
  
          "sets_and_prop_visuals": {
            "type": "object",
            "additionalProperties": false,
            "required": ["primary_sets", "prop_style", "display_devices"],
            "properties": {
              "primary_sets": { "type": "array", "items": { "type": "string" } },
              "prop_style": { "type": "string" },
              "display_devices": { "type": "string", "description": "Diegetic screens/signage policy" },
              "runner_gags_visual": { "type": "array", "items": { "type": "string" } }
            }
          },
  
          "post_grade": {
            "type": "object",
            "additionalProperties": false,
            "required": ["curve", "lut", "grain", "halation"],
            "properties": {
              "curve": { "type": "string" },
              "lut": { "type": "string" },
              "grain": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "placement": { "type": "string" },
                  "intensity": { "type": "string" }
                }
              },
              "halation": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "scope": { "type": "string" },
                  "strength": { "type": "string" }
                }
              }
            }
          },
  
          "export_specs": {
            "type": "object",
            "additionalProperties": false,
            "required": ["stills", "video_intermediate", "delivery_color", "plates"],
            "properties": {
              "stills": { "type": "array", "items": { "type": "string" } },
              "video_intermediate": { "type": "string" },
              "delivery_color": { "type": "string" },
              "plates": { "type": "array", "items": { "type": "string" } }
            }
          },
  
          "prohibitions_global": {
            "type": "array",
            "minItems": 1,
              "items": { "type": "string" }
          }
        }
      }
    }
  }
  
